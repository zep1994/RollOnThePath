<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RollWithIt.Components"
             x:Class="RollWithIt.MainPage">

    <StackLayout>

        <Grid BackgroundColor="#2196F3" HeightRequest="50" Padding="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Text="Login" Clicked="OnLoginClicked" HorizontalOptions="End" VerticalOptions="Center" TextColor="White" />
            <Button Text="Sign Up" Clicked="OnSignUpClicked" HorizontalOptions="Start" VerticalOptions="Center" TextColor="White" />
        </Grid>

        <!-- Placeholder Text -->
        <Label Text="Roll With It" FontSize="Large" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
    </StackLayout>
</ContentPage>
    
    
