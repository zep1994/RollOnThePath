<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RollWithIt.Auth"
             x:Class="RollWithIt.Auth.LoginPage"
             Title="LoginPage">

    <ScrollView>
        <StackLayout Padding="20">
            <Frame CornerRadius="10" Padding="20" Margin="0,50,0,50" BackgroundColor="#F5F5F5">
                <StackLayout Spacing="20">
                    <Entry x:Name="UsernameEntry" Placeholder="Username" BackgroundColor="#EEEEEE" TextColor="#333333" FontSize="18"  />
                    <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" BackgroundColor="#EEEEEE" TextColor="#333333" FontSize="18" />
                    <Button Text="Log In" Clicked="OnLoginClicked" BackgroundColor="#007BFF" TextColor="White" FontSize="18"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>
