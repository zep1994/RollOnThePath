<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:RollWithIt.ViewModels"
             x:Class="RollWithIt.Views.Lessons.SubLessonDetailPage"
             Title="{Binding SubLesson.Title}"
             x:DataType="viewModel:SubLessonViewModel">
     <ContentPage.Resources>
     <x:Double x:Key="boxSize">50</x:Double>
     <x:Int32 x:Key="rowHeight">60</x:Int32>
 </ContentPage.Resources>



    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Text="{Binding SubLesson.Title}"
                   FontSize="Medium"
                   HorizontalOptions="CenterAndExpand" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
