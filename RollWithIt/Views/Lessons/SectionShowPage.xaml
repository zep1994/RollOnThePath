<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RollWithIt.Views.SectionShowPage">

    <!-- Define the ViewModel -->
    <ContentPage.BindingContext>
        <viewModels:SectionShowViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">

        <!-- Header -->
        <Label Text="Sections with SubLessons" FontSize="Large" HorizontalOptions="Center" Margin="0,10,0,20" />

        <!-- Section List -->
        <CollectionView ItemsSource="{Binding Sections}" Margin="0,0,0,20">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding SectionTitle}" FontSize="Medium" Margin="0,5,0,5" />
                        <CollectionView ItemsSource="{Binding SubLessons}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Label Text="{Binding Title}" FontSize="Small" Margin="10,0" />
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>

</ContentPage>
