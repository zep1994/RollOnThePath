<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:RollWithIt.ViewModels"
             x:Class="RollWithIt.Views.Lessons.SubLessonShowPage"
             Title="{Binding Title}"> 

    <ContentPage.BindingContext>
        <viewModels:SubLessonViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="{Binding SubLesson.Title}" FontSize="Large" FontAttributes="Bold" Margin="0,10,0,20" />
            <Label Text="{Binding SubLesson.Description}" FontSize="Medium" Margin="0,0,0,10" />
            <Label Text="{Binding SubLesson.Content}" FontSize="Medium" Margin="0,0,0,10" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
