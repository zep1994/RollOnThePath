<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RollWithIt.Views.Lessons.SubLessonShowPage"
             Title="{Binding SubLesson.Title, Mode=TwoWay}">
    <ContentPage.Content>
        <StackLayout Padding="10" VerticalOptions="Start">
            <!-- Title -->
            <Label Text="{Binding SubLesson.Title, Mode=TwoWay}"
                   FontAttributes="Bold"
                   FontSize="Large"
                   HorizontalOptions="Start"
                   TextColor="Black"/>

            <!-- Description -->
            <Label Text="{Binding SubLesson.Description, Mode=TwoWay}"
                   FontSize="Medium"
                   HorizontalOptions="CenterAndExpand"
                   TextColor="Gray"
                   Margin="0,10,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
