<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RollWithIt.Views.Lessons.LessonsPage"
             x:DataType="viewModel:LessonsViewModel"
             xmlns:viewModel="clr-namespace:RollWithIt.ViewModels">
    <ContentPage.Content>
        <ListView x:Name="LessonsListView"
              ItemsSource="{Binding Lessons}"
              SelectionMode="None"
              VerticalOptions="FillAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout BackgroundColor="#f0f0f0" MinimumHeightRequest="100">
                            <!-- Lesson Title -->
                            <Label Text="{Binding Title}"
                               FontAttributes="Bold"
                               FontSize="18"
                               TextColor="Black"/>
                            <!-- Navigate to LessonPage -->
                            <Button Text="View Lesson"
                                Clicked="OnLessonClicked"
                                CommandParameter="{Binding}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>