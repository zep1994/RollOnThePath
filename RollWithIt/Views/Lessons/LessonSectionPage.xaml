<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RollWithIt.Views.Lessons.LessonSectionPage"
             Title="{Binding LessonSection.Title}"
             x:DataType="viewModel:LessonSectionViewModel"
             xmlns:viewModel="clr-namespace:RollWithIt.ViewModels">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <!-- LessonSection Title -->
            <Label Text="{Binding LessonSection.Title}"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Red"
                   VerticalOptions="CenterAndExpand"
                   Margin="0,10,0,20"/>

            <!-- SubLessons List -->
            <ListView ItemsSource="{Binding SubLessons}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Title}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>