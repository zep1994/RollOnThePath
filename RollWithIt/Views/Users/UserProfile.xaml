<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RollWithIt.Views.Users.UserProfile"
             Title="UserProfile">
    
    <StackLayout Padding="20">
        <Label Text="Username:" />
        <Label x:Name="usernameLabel" TextColor="Red"/>

        <Label Text="Email:" />
        <Label x:Name="emailLabel" TextColor="Red"/>

        <Label Text="First Name:" />
        <Label x:Name="firstNameLabel" TextColor="Red"/>

        <Label Text="Last Name:" />
        <Label x:Name="lastNameLabel" TextColor="Red"/>

        <Label x:Name="ErrorMessageLabel" Text="" TextColor="Red" />
    </StackLayout>
</ContentPage>