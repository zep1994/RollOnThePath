<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RollWithIt.Views.Users.UserProfile"
             Title="UserProfile">

    <ScrollView>
        <StackLayout Padding="20">
            <Frame CornerRadius="10" Padding="10" Margin="0,20,0,20" BackgroundColor="#F5F5F5">
                <StackLayout Spacing="10">
                    <Label Text="Username" FontSize="18" FontAttributes="Bold" TextColor="#333333"/>
                    <Label x:Name="usernameLabel" TextColor="#666666"/>
                    <Label Text="Email" FontSize="18" FontAttributes="Bold" TextColor="#333333"/>
                    <Label x:Name="emailLabel" TextColor="#666666"/>
                    <Label Text="First Name" FontSize="18" FontAttributes="Bold" TextColor="#333333"/>
                    <Label x:Name="firstNameLabel" TextColor="#666666"/>
                    <Label Text="Last Name" FontSize="18" FontAttributes="Bold" TextColor="#333333"/>
                    <Label x:Name="lastNameLabel" TextColor="#666666"/>
                    <Label x:Name="ErrorMessageLabel" TextColor="Red" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>
